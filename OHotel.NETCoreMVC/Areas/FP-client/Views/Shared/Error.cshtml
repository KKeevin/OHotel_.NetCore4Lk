@model ErrorViewModel
@{
    ViewData["Title"] = "錯誤";
    Layout = "_Layout";
}
<div class="container py-5 text-center">
    <h1 class="text-danger">@(Model.StatusCode ?? 500) 錯誤</h1>
    <h2 class="text-secondary">@Model.StatusMessage</h2>
    @if (Model.ShowRequestId)
    {
        <p class="mt-3"><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
    }
    @if (Model.IsDevelopment)
    {
        <p class="mt-4 text-muted">開發模式：正式環境將隱藏詳細資訊。</p>
    }
    <a asp-area="FP-client" asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">返回首頁</a>
</div>
