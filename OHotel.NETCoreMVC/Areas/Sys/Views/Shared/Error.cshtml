@model ErrorViewModel
@{
    ViewData["Title"] = "錯誤";
    Layout = "_Layout";
}
<div class="container py-5">
    <div class="text-center">
        <h1 class="text-danger">@(Model.StatusCode ?? 500) 錯誤</h1>
        <h2 class="text-secondary">@Model.StatusMessage</h2>
        @if (Model.ShowRequestId)
        {
            <p class="mt-3"><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
        }
        @if (Model.IsDevelopment)
        {
            <div class="alert alert-info mt-4 text-start">
                <strong>開發模式</strong>：此環境會顯示詳細錯誤資訊。正式環境請將 <code>ASPNETCORE_ENVIRONMENT</code> 設為 <code>Production</code>。
            </div>
        }
        <a asp-area="Sys" asp-controller="Welcome" asp-action="Index" class="btn btn-primary mt-3">返回首頁</a>
    </div>
</div>
