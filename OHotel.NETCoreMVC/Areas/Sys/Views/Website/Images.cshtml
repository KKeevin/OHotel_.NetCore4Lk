<main class="app-content">
    <!-- 所在位置 -->
    <div class="app-title">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">系統管理</li>
            <li class="breadcrumb-item active">飯店圖庫管理</li>
        </ol>
    </div>
    <!-- 所在位置 end-->
    <!-- 內容 -->
    <div class=" tile">
        <div class="tabs mt-none">
            <ul class="nav nav-tabs nav-justifie">
                <li class="active"><a href="#pic_list" data-toggle="tab"><i class="fa fa-list"></i>圖片列表</a></li>
                <li><a href="#pic_addtype" data-toggle="tab"><i class="fa fa-edit"></i>類別管理</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade in active clearfix" id="pic_list">
                    <!-- form -->
                    <form class="form-horizontal" id="form1" action="EH_Images_List.aspx" method="post" name="form1" enctype="multipart/form-data">
                        <input type="hidden" name="AVG" id="AVG" value="&amp;">
                        <input type="hidden" name="OrderBase" value="3">
                        <input type="hidden" name="Order" value="0">
                        <input type="hidden" name="Page" value="1">
                        <input type="hidden" name="OrderClass" value="">
                        <input type="hidden" name="flag" value="">
                        <input type="hidden" name="No" value="">
                        <!---->
                        <div class="row">
                            <div class="form-group row col-md-3">
                                <label class="control-label col-md-3">搜尋</label>
                                <div class="col-md-9">
                                    <input class="form-control" type="text" id="SerchContent" name="SerchContent" placeholder="搜尋" value="">
                                </div>
                            </div>
                            <div class="form-group row col-md-3">
                                <label class="control-label col-md-3">
                                    搜尋欄位
                                </label>
                                <div class="col-md-9">
                                    <select class="form-control" id="SerchKey" name="SerchKey">
                                        <option value="EHotel_Pictures_New.Description">圖片描述</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row col-md-3">
                                <div class="col-md-6">
                                    <button class="btn btn-primary viewimage" onclick="sys.SH('form1','EH_Images_List.aspx');"><i class="fa fa-search"></i>查詢</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-horizontal row form-inline md" id="tabletop">
                            <div class="col-sm-6">
                                <div class="padl">
                                    <input type="checkbox" id="checkAll" onclick="sys.CheckAll(); ">全選 <button class="btn btn-danger deldata ml1" type="button" onclick="sys.Del('form1', 'EH_Images_.aspx');"><i class="fa fa-remove"></i>刪除</button><button class="btn btn-success ml1" type="button" onclick="sys.Send('form1', 'EH_Images_A.aspx');"><i class="fa fa-plus-square-o"></i>新增</button><button class="btn btn-info ml1" id="FastOrder" type="button"><i class="fa fa-reorder"></i>快速排序</button>
                                </div>
                            </div>
                        </div>

                        <table class="table rwd-table">
                            <thead>
                                <tr>
                                    <th class="col-md-1"></th>
                                    <th class="col-md-1">操作</th>
                                    <th class="col-md-1"><a href="javascript:void(0)" onclick="sys.OrderField('form1',1,1);"><i class="fa fa-fw fa-sort"></i>編號</a></th>
                                    <th class="col-md-2"><a href="javascript:void(0)" onclick="sys.OrderField('form1',2,1);"><i class="fa fa-fw fa-sort"></i>類別</a></th>
                                    <th>圖片描述</th>
                                    <th><a href="javascript:void(0)" onclick="sys.OrderField('form1',3,1);"><i class="fa fa-fw fa-sort"></i>排序</a></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr><td data-th="刪除"><input name="del_code" class="del_code" type="checkbox" value="1"></td><td data-th="操作"><a class="btn btn-success" title="編輯" href="javascript:void(0)" onclick="sys.UP('form1',1,'EH_Images_M.aspx')"><i class="fa fa-edit"></i>編輯</a></td><td data-th="編號">1</td><td data-th="類別">松鼠</td><td data-th="照片描述"><div class="pic"><a href="http://officialhotel.easytravel.com.tw/OHotel_Test1/ccc.jpgggg" target="_blank"><img src="http://officialhotel.easytravel.com.tw/OHotel_Test1/ccc.jpgggg"></a></div>gggg</td><td data-th="排序">0</td></tr>
                                <tr><td data-th="刪除"><input name="del_code" class="del_code" type="checkbox" value="2"></td><td data-th="操作"><a class="btn btn-success" title="編輯" href="javascript:void(0)" onclick="sys.UP('form1',2,'EH_Images_M.aspx')"><i class="fa fa-edit"></i>編輯</a></td><td data-th="編號">2</td><td data-th="類別">松鼠</td><td data-th="照片描述"><div class="pic"><a href="http://officialhotel.easytravel.com.tw/OHotel_Test1/ddd.png17417" target="_blank"><img src="http://officialhotel.easytravel.com.tw/OHotel_Test1/ddd.png17417"></a></div>1741741</td><td data-th="排序">0</td></tr>
                            </tbody>
                        </table>

                    </form>
                    <!-- form -->
                </div>
                <!--圖片類別 -->
                <div class="tab-pane fade clearfix" id="pic_addtype">
                    <!--新增圖片類別-->
                    <form class="form-horizontal" id="formType" action="#" method="post" name="formType" enctype="multipart/form-data">
                        <div class="form-group row">
                            <label class="control-label col-md-2">圖庫類別名稱</label>
                            <div class="col-md-8">
                                <input class="form-control" name="ClassName" id="ClassName" type="text" value="" placeholder="類別名稱">
                            </div>
                        </div>
                    </form>
                    <div class="tile-footer form-inline md">
                        <div class="padl" align="center">
                            <button class="btn btn-primary" type="button" id="addTypeSave"><i class="fa fa-save">儲存</i></button>
                        </div>
                    </div>
                    <!--類別列表-->
                    <table class="table rwd-table" id="class-table">
                        <thead>
                            <tr>
                                <th class="col-md-2">操作</th>
                                <th>名稱</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr><td data-th="操作"><a class="btn btn-danger delType" title="刪除" href="javascript:void(0)" data-cno="1"><i class="fa fa-remove"></i>刪除</a><a class="btn btn-success modifyType ml1" title="修改" href="javascript:void(0)" data-cno="1"><i class="fa fa-edit"></i>修改</a></td><td data-th="名稱"><input class="form-control CName" name="CName" type="text" value="松鼠" placeholder="類別名稱"></td></tr>
                        </tbody>
                    </table>
                </div>
                <!--圖片類別 END -->
            </div>
        </div>
    </div>
</main>